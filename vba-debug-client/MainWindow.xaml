<Window x:Class="vba_debug_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VBA Debug Log" Height="807" Width="704">
    <Grid Margin="0,0,502,0">
        <Button x:Name="pause" Content="Log" HorizontalAlignment="Left" Margin="305,740,-186,0" VerticalAlignment="Top" Width="75" Click="pause_Click"/>
        <TextBox x:Name="logBox" HorizontalAlignment="Left" Height="640" Margin="10,0,-491,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="675" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBox.SelectionBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF5F1F1" Offset="0"/>
                    <GradientStop Color="#FF151414" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.SelectionBrush>
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA45C5C" Offset="0.002"/>
                    <GradientStop Color="#FFBAEC9D" Offset="0.99"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <TextBlock x:Name="description" HorizontalAlignment="Left" Margin="10,685,-491,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="675" Height="21"><InlineUIContainer>
        	</InlineUIContainer></TextBlock>
        <Button x:Name="clear" Content="Clear" HorizontalAlignment="Left" Margin="305,715,-186,0" VerticalAlignment="Top" Width="75" Click="clear_Click"/>
    </Grid>
</Window>
